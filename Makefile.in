ccsrc = $(wildcard src/*.cc)
mochdr = src/ui.h
mocsrc = $(mochdr:.h=.moc.cc)
obj = $(ccsrc:.cc=.o) $(mocsrc:.cc=.o)
dep = $(ccsrc:.cc=.d)
bin = spnavcfg

CC ?= gcc
CXX ?= g++
UIC ?= uic
MOC ?= moc

warn = -pedantic -Wall
incdir = -I.

CXXFLAGS = $(warn) $(dbg) $(opt) $(incdir) -fPIC `pkg-config --cflags Qt5Core Qt5Gui Qt5Widgets` \
		 $(add_cflags) -MMD
LDFLAGS = `pkg-config --libs Qt5Core Qt5Gui Qt5Widgets` -lspnav $(add_ldflags)

$(bin): $(obj)
	$(CXX) -o $@ $(obj) $(LDFLAGS)

-include $(dep)

src/main.o: src/main.cc ui_mainwin.h

ui_mainwin.h: ui/spnavcfg.ui
	$(UIC) -o $@ $<

%.moc.cc: %.h
	$(MOC) -o $@ $(incdir) $<

.PHONY: clean
clean:
	rm -f $(obj) $(bin) $(mocsrc) win_main_ui.h

.PHONY: cleandep
cleandep:
	rm -f $(dep)

.PHONY: install
install:
	mkdir -p $(DESTDIR)$(PREFIX)/bin
	cp $(bin) $(DESTDIR)$(PREFIX)/bin/$(bin)
	for i in 48 128 256; do \
		destdir=$(DESTDIR)$(PREFIX)/share/icons/hicolor/$${i}x$${i}/apps; \
		mkdir -p $$destdir; \
		cp icons/spnavcfg-$${i}x$${i}.png $$destdir/spnavcfg.png; \
	done
	mkdir -p $(DESTDIR)$(PREFIX)/share/applications
	cp -a icons/spnavcfg.desktop $(DESTDIR)$(PREFIX)/share/applications/


.PHONY: uninstall
uninstall:
	rm -f $(DESTDIR)$(PREFIX)/bin/$(bin)
	for i in 48 128 256; do \
		destdir=$(DESTDIR)$(PREFIX)/share/icons/hicolor/$${i}x$${i}/apps; \
		rm -f $${destdir}/spnavcfg.png; \
	done
	rm -f $(DESTDIR)$(PREFIX)/share/applications/spnavcfg.desktop
